{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez Hypnos{% endblock %}

{% block body %}

	<div class="container-fluid ">
		<h1 class="h1 my-3 text-center"> Hypnos, les plus beaux hotels pour des séjours romantiques</h1>

		<div id="carousel" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">


				{% for hotel in hotels %}

					<div class="carousel-item ">
						<div class="card">
							<img class="card-img-top img-fluid " src="/images/hotel/{{ hotel.imageName }}"
									 alt="Photo de l’hotel {{ hotel.name }}">
							<p class="card-text m-2 d-flex justify-content-around"> Hotel {{ hotel.name }} || {{ hotel.city }}<a
										href="{{ path('app_hotel_view',{'id' : hotel.id }) }}" class="btn btn-primary">Voir l’hotel</a>
						</div>
					</div>
				{% endfor %}
			</div>
			<a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Précédent</span>
			</a>
			<a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Suivant</span>
			</a>

		</div>

	<div class="container-fluid mt-3">

	<div class="row d-flex text-center">

		<div class="col-12 col-md-4 p-2"><img class="img-fluid m-2"   src="{{ asset('/assets/img/room-service-svgrepo-com.svg')}}" style='width: 10rem' >
