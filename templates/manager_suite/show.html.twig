{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Suite{% endblock %}

{% block main %}
    <h1>Suite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ suite.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ suite.description }}</td>
            </tr>
            <tr>
                <th>Night_price</th>
                <td>{{ suite.nightPrice }} €</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary m-2 " href="{{ ea_url().setRoute('app_manager_suite_index') }}">Retour à la liste</a>

    <a class="btn btn-primary m-2 " href="{{ ea_url().setRoute('app_manager_suite_edit', {'id': suite.id}) }}">Edition</a>
    <h2>Images</h2>

    <div class="container d-flex">
        <div class="row ">

            {% for suite in suite.images %}
                <div class="col-md ">

                    <div class="card my-2" style="width: 200px;">
                        <img class="card-img-top" src="{{ asset('/uploads/'~suite.name) }}" alt="Image suite">

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {{ include('manager_suite/_delete_form.html.twig') }}
{% endblock %}
